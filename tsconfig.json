{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es6",
    "target": "es2018",
    "outDir": "./lib",
    "lib": ["es2015", "es2017", "dom"],
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": [
    "src/**/*story*",
    "src/**/*test*",
    "node_modules",
    "build",
    "release",
    "assets",
    "docs",
    "Backup"
  ]
}
